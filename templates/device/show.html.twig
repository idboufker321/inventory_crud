{% extends 'base.html.twig' %}

{% block title %}Device{% endblock %}

{% block body %}
    <h1>Device</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Sn</th>
                <td>{{ device.sn }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ device.category }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ device.model }}</td>
            </tr>
            <tr>
                <th>Contract</th>
                <td>{{ device.contract }}</td>
            </tr>
            <tr>
                <th>DateAchat</th>
                <td>{{ device.dateAchat ? device.dateAchat|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_device_index') }}">back to list</a>

    <a href="{{ path('app_device_edit', {'id': device.id}) }}">edit</a>

    {{ include('device/_delete_form.html.twig') }}
{% endblock %}
